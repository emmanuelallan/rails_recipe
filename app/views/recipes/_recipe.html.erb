<div class = "recipe">
    <div>
    <h2>
      <%= recipe.name %>
    </h2>
      <p>
        <%= recipe.description %>
      </p>
    </div>
    <div>
      <span>
        <%= link_to "Recipe details", recipe_path(recipe), class: "inline_btn add" %>
      </span>
    </div>
    <div>
      <span>
        <%= button_to "Remove", recipe, method: :delete, class: "inline_btn remove" %>
      <span>
    </div>
  
</div>
